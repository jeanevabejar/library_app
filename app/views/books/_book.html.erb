<div class="flex flex-col max-w-[100%]">
  <p class="flex flex-wrap">
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

<% if book.genre.present?  %>
 <p>
    <strong>Genre:</strong>
    <%= book.genre %>
  </p>
<%end %>


<% if book.link.present? %>
   <p class=" truncate">
    <strong>Link:</strong>
    <%= book.link %>
  </p>
<% end %>


<% if book.content.present? %>
   <p>
    <strong>Content:</strong>
    <%= book.content %>
  </p>
<% end %>

 

</div>
